{
  "manifest_version": 3,
  "name": "Netflix Ultimate Extension",
  "version": "1.4",
  "description": "Extension Netflix avec recherche avancée, contrôle manette, comparateur, playlists, stats, thème, preview, etc.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.netflix.com/*"
      ],
      "js": [
        "content.js",
        "features_bundle.js"
      ],
      "run_at": "document_idle"
    }
  ]
}